                material: "Acier Inoxydable 316L",
                stock: "Limité"
            },
            {
                id: 2,
                name: "Collier Ayatul Kursi - Argent Pur",
                price: 15000,
                category: "Colliers Spéciaux",
                img: "https://images.unsplash.com/photo-1599643478518-a784e5dc4c8f?auto=format&fit=crop&q=80&w=800",
                desc: "Gravure laser de haute précision. Une pièce spirituelle unique.",
                material: "Argent Pur 925",
                stock: "Disponible"
            },
            {
                id: 3,
                name: "Gourmette Homme Robuste",
                price: 12500,
                category: "Bijoux pour Hommes",
                img: "https://images.unsplash.com/photo-1611591437281-460bfbe1220a?auto=format&fit=crop&q=80&w=800",
                desc: "Le style masculin à l'état pur. Inaltérable.",
                material: "Acier Inoxydable",
                stock: "Disponible"
            },
            {
                id: 4,
                name: "Bague de Fiançaille Princesse",
                price: 45000,
                category: "Bijoux pour Femmes",
                img: "https://images.unsplash.com/photo-1605100804763-247f67b3557e?auto=format&fit=crop&q=80&w=800",
                desc: "L'éclat d'un diamant, la durabilité du Monastère.",
                material: "Zircon & Argent",
                stock: "Disponible"
            }
        ];

        // GESTION NAVIGATION
        function showPage(pageId) {
            document.querySelectorAll('.page').forEach(p => p.classList.add('hidden'));
            document.getElementById('page-' + pageId).classList.remove('hidden');
            document.getElementById('mobile-menu').classList.add('hidden');
            window.scrollTo(0,0);
            if(pageId === 'boutique') renderProducts(products);
        }

        function toggleMenu() {
            document.getElementById('mobile-menu').classList.toggle('hidden');
        }

        // AFFICHAGE PRODUITS
        function renderProducts(items) {
            const grid = document.getElementById('product-grid');
            grid.innerHTML = items.map(p => `
                <div class="bg-white border hover:shadow-2xl transition-all cursor-pointer group" onclick="showProductDetail(${p.id})">
                    <div class="h-64 overflow-hidden relative">
                        <img src="${p.img}" class="w-full h-full object-cover group-hover:scale-110 transition duration-500">
                        ${p.stock === 'Limité' ? '<span class="absolute top-2 left-2 bg-red-600 text-white text-[10px] px-2 py-1 font-bold">STOCK LIMITÉ</span>' : ''}
                    </div>
                    <div class="p-4 space-y-2">
                        <p class="text-[10px] text-violet-600 font-bold uppercase">${p.category}</p>
                        <h3 class="font-bold text-gray-800 line-clamp-1 uppercase text-sm">${p.name}</h3>
                        <p class="text-violet-800 font-black text-xl">${p.price.toLocaleString()} FCFA</p>
                    </div>
                </div>
            `).join('');
        }

        function filterCategory(cat) {
            showPage('boutique');
            document.getElementById('current-category').innerText = cat;
            const filtered = products.filter(p => p.category === cat);
            renderProducts(filtered);
        }

        // AFFICHAGE DETAIL
        function showProductDetail(id) {
            const product = products.find(p => p.id === id);
            showPage('detail');
            const detail = document.getElementById('detail-content');
            detail.innerHTML = `
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 fade-in">
                    <div>
                        <img src="${product.img}" class="w-full aspect-square object-cover rounded shadow-2xl">
                        <div class="grid grid-cols-4 gap-2 mt-4">
                             <img src="${product.img}" class="opacity-50 border border-violet-600 rounded">
                             <div class="bg-gray-100 rounded flex items-center justify-center text-xs text-gray-400 italic">Photo 2</div>
                             <div class="bg-gray-100 rounded flex items-center justify-center text-xs text-gray-400 italic">Photo 3</div>
                             <div class="bg-gray-100 rounded flex items-center justify-center text-xs text-gray-400 italic">Photo 4</div>
                        </div>
                    </div>
                    <div class="space-y-6">
                        <div>
                            <span class="text-violet-600 font-bold uppercase tracking-widest text-xs">${product.category}</span>
                            <h1 class="text-3xl font-serif font-bold mt-2 uppercase">${product.name}</h1>
                            <p class="text-3xl font-black text-violet-900 mt-2">${product.price.toLocaleString()} FCFA <span class="text-xs text-gray-400 font-normal italic">/ la paire</span></p>
                        </div>
                        
                        <div class="p-4 bg-violet-50 border-l-4 border-violet-600 text-gray-600 italic">
                            "${product.desc}"
                        </div>

                        <div class="grid grid-cols-2 gap-4 text-sm">
                            <p><b>Matière :</b> ${product.material}</p>
                            <p><b>Stock :</b> ${product.stock}</p>
                            <p><b>Résistance :</b> Étanche</p>
                            <p><b>Peau :</b> Hypoallergénique</p>
                        </div>

                        <div class="bg-gray-900 text-white p-6 rounded-lg space-y-4">
                            <h3 class="font-bold border-b border-white/20 pb-2">FORMULAIRE DE COMMANDE</h3>
                            <div class="space-y-3">
                                <input type="text" id="order-name" placeholder="Nom Complet" class="w-full p-3 bg-white/10 border border-white/20 rounded outline-none focus:border-white">
                                <input type="tel" id="order-whatsapp" placeholder="Numéro WhatsApp" class="w-full p-3 bg-white/10 border border-white/20 rounded outline-none focus:border-white">
                                <div class="grid grid-cols-2 gap-2">
                                    <select id="order-loc" class="bg-white/10 border border-white/20 p-3 rounded">
                                        <option>Ouagadougou (Gratuit)</option>
                                        <option>Hors Ouaga</option>
                                    </select>
                                    <select id="order-pay" class="bg-white/10 border border-white/20 p-3 rounded">
                                        <option>Orange Money</option>
                                        <option>Moov Money</option>
                                        <option>Espèces</option>
                                    </select>
                                </div>
                                <button onclick="sendOrder('${product.name}')" class="w-full bg-green-500 hover:bg-green-600 text-white py-4 rounded font-bold uppercase tracking-widest transition shadow-lg">Commander via WhatsApp</button>
                                <button onclick="alert('Commande enregistrée !')" class="w-full bg-violet-600 hover:bg-violet-700 text-white py-4 rounded font-bold uppercase tracking-widest transition">Valider la commande</button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            lucide.createIcons();
        }

        function sendOrder(pName) {
            const name = document.getElementById('order-name').value;
            const wa = document.getElementById('order-whatsapp').value;
            const loc = document.getElementById('order-loc').value;
            const pay = document.getElementById('order-pay').value;

            if(!name || !wa) {
                alert("Veuillez remplir votre nom et numéro WhatsApp");
                return;
            }

            const msg = `Bonjour Monastère des Bijoux ! Je souhaite commander :\n\n- Produit : ${pName}\n- Client : ${name}\n- WhatsApp : ${wa}\n- Lieu : ${loc}\n- Paiement : ${pay}`;
            window.open(`https://wa.me/22671842902?text=${encodeURIComponent(msg)}`, '_blank');
        }

        // Initialisation
        window.onload = () => {
            lucide.createIcons();
            showPage('accueil');
        };
    </script>
