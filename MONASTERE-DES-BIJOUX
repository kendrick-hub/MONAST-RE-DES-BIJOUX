        // Fonction pour g√©rer l'affichage ou l'adaptation selon la ville si besoin
        function toggleQuartier() {
            const loc = document.getElementById('order-loc').value;
            const qInput = document.getElementById('order-quartier');
            qInput.placeholder = `Quartier √† ${loc}...`;
        }

        function sendOrder(pName) {
            const name = document.getElementById('order-name').value;
            const wa = document.getElementById('order-whatsapp').value;
            const loc = document.getElementById('order-loc').value;
            const quartier = document.getElementById('order-quartier').value;
            const pay = document.getElementById('order-pay').value;

            if(!name || !wa || !quartier) {
                alert("Veuillez remplir votre nom, num√©ro et quartier pour la livraison.");
                return;
            }

            const msg = `‚ú® NOUVELLE COMMANDE ‚ú®\n\nüõçÔ∏è Produit : ${pName}\nüë§ Client : ${name}\nüì± WhatsApp : ${wa}\nüìç Ville : ${loc}\nüèòÔ∏è Quartier : ${quartier}\nüí≥ Paiement : ${pay}\n\nMerci de confirmer ma commande !`;
            window.open(`https://wa.me/22671842902?text=${encodeURIComponent(msg)}`, '_blank');
        }

